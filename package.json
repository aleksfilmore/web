{
  "name": "aleks-filmore-website",
  "version": "1.0.0",
  "description": "Author website with e-commerce for audiobooks and signed copies",
  "main": "index.html",
  "scripts": {
    "start": "node server.js",
    "dev": "netlify dev",
    "build": "node build-css.js",
    "build-css": "node build-css.js",
    "watch-css": "node build-css.js --watch",
    "generate-blog-json": "node ./scripts/generate_blog_index.js",
    "deploy": "npm run build && netlify deploy --prod",
    "test": "node ./tests/test_db_utils.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "netlify dev:exec drizzle-kit migrate",
    "db:studio": "netlify dev:exec drizzle-kit studio"
  },
  "keywords": [
    "audiobook",
    "e-commerce",
    "stripe",
    "author",
    "memoir"
  ],
  "author": "Aleks Filmore",
  "license": "ISC",
  "dependencies": {
    "@google-analytics/data": "^4.12.1",
    "@netlify/neon": "^0.1.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.44.5",
    "express": "^4.18.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^157.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.9.7",
    "resend": "^6.0.1",
    "stripe": "^14.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "js-yaml": "^4.1.0",
    "netlify-cli": "^23.3.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.10"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aleksfilmore/web.git"
  },
  "bugs": {
    "url": "https://github.com/aleksfilmore/web/issues"
  },
  "homepage": "https://github.com/aleksfilmore/web#readme"
}
